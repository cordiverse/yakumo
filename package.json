    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.45",
    "c8": "^7.12.0",
    "esbuild": "^0.14.51",
    "mocha": "^9.2.2",
    "shx": "^0.3.4",
    "typescript": "^4.7.4"
  }
}
